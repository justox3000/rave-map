<div class="container" id="party-form">
  <div class="row justify-content-center">
    <div class="col-8 border">
      <div class="simple-form">
        <h1>Create a new event</h1>
        <%= simple_form_for(@party) do |f| %>
          <%= f.input :title %>
          <%= f.input :music_genre %>
          <%= f.input :location %>
          <%= f.input :description %>
          <%= f.input :date %>
          <%= f.input :start_time %>
          <%= f.input :photo, as: :file %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
