<%= render "shared/navbar" %>
<div class="create-container" id="party-form">
  <div class="row justify-content-center">
    <div class="col-10 border">
      <div class="simple-form">
        <h1>Create a new event</h1>
        <div class="create-input">
          <%= simple_form_for(@party) do |f| %>
            <%= f.input :title %>
            <%= f.input :music_genre %>
            <%= f.input :location %>
            <%= f.input :description %>
            <%= f.input :date %>
            <%= f.input :start_time, as: :time %>
            <%= f.input :photo, as: :file %>
            <div class="submit-create mb-3">
              <%= f.submit %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
